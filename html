<script>
  // small helper to smooth scroll to catalog
  function scrollToRows(){
    document.getElementById('catalog').scrollIntoView({behavior:'smooth'});
  }

  // open modal & play: for demo we use placeholder YouTube trailer (or just show blank)
  const playBtn = document.getElementById('play-feature');
  const modal = document.getElementById('trailerModal');
  const closeModal = document.getElementById('closeModal');
  const videoFrame = document.getElementById('videoFrame');

  // Demo trailer (public youtube embed). You can change to any public video id.
  const demoTrailer = "https://www.youtube.com/embed/ysz5S6PUM-U?autoplay=1";

  playBtn.addEventListener('click', (e)=>{
    e.preventDefault();
    openTrailer(demoTrailer, 'StreamFlix Featured Trailer');
  });

  // allow clicking on cards to open a small info + trailer
  document.querySelectorAll('.card').forEach(card=>{
    card.addEventListener('click', (e)=>{
      const title = card.getAttribute('data-title') || 'Trailer';
      // In a real site you'd have a trailer URL per content item.
      openTrailer(demoTrailer, title + ' ‚Äî Trailer');
    });
    // keyboard support
    card.addEventListener('keydown', (ev)=>{
      if(ev.key === 'Enter' || ev.key === ' '){
        ev.preventDefault();
        card.click();
      }
    });
  });

  function openTrailer(url, title){
    videoFrame.src = url;
    document.getElementById('modalTitle').textContent = title;
    modal.classList.add('open');
    // trap focus: focus close button
    closeModal.focus();
  }

  closeModal.addEventListener('click', ()=>{
    closeTrailer();
  });

  modal.addEventListener('click', (ev)=>{
    if(ev.target === modal) closeTrailer();
  });

  function closeTrailer(){
    modal.classList.remove('open');
    videoFrame.src = '';
  }

  // Escape to close modal
  document.addEventListener('keydown', (e)=>{
    if(e.key === 'Escape' && modal.classList.contains('open')) closeTrailer();
  });

  // Tiny accessibility improvement: focus outlines for keyboard users only
  (function(){
    function handleFirstTab(e) {
      if (e.key === 'Tab') {
        document.body.classList.add('show-focus');
        window.removeEventListener('keydown', handleFirstTab);
      }
    }
    window.addEventListener('keydown', handleFirstTab);
  })();
</script>

